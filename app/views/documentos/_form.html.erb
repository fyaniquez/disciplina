<%= form_with(model: documento) do |form| %>
  <% if documento.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(documento.errors.count, "errores") %> evitaron que este documento fuera grabado</h2>

      <ul>
        <% documento.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :fecha %>
    <%- fecha_string = form.object.fecha && form.object.fecha.localtime.strftime("%d/%m/%Y %H:%M") %>
    <%= form.text_field :fecha, :hidden => true %>
    <input type="text" value="<%= fecha_string %>" readonly>
  </div>

  <div class="field">
    <%= form.label :seguimiento_id %>
    <%= form.text_field :seguimiento_id, :readonly => true %>
  </div>

  <div class="field">
    <%= form.label :archivo %>
    <%= form.file_field :archivo %>
  </div>

  <div class="field">
    <%= form.label :descripcion %>
    <%= form.text_area :descripcion %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
