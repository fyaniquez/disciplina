<%= form_with(model: sancion) do |form| %>
  <% if sancion.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(sancion.errors.count, "errores") %> evitaron que este sancion fuera grabada:</h2>

      <ul>
        <% sancion.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :estado %>
    <%= form.text_field :estado %>
  </div>

  <div class="field">
    <%= form.label :norma %>
    <%= form.text_field :norma %>
  </div>

  <div class="field">
    <%= form.label :posicion %>
    <%= form.text_field :posicion %>
  </div>

  <div class="field">
    <%= form.label :nombre %>
    <%= form.text_field :nombre %>
  </div>

  <div class="field">
    <%= form.label :descripcion %>
    <%= form.text_area :descripcion %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
