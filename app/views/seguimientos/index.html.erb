<p id="notice"><%= notice %></p>

<h1>Seguimientos</h1>

<table>
  <thead>
    <tr>
      <th>Fecha</th>
      <th>Caso</th>
      <th>Numero</th>
      <th>Glosa</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @seguimientos.each do |seguimiento| %>
      <tr>
        <td><%= seguimiento.fecha.localtime.strftime("%d/%m/%Y %H:%M") %></td>
        <td><%= seguimiento.caso_id %></td>
        <td><%= seguimiento.numero %></td>
        <td><%= seguimiento.glosa %></td>
        <td><%= link_to 'Show', seguimiento %></td>
        <td><%= link_to 'Edit', edit_seguimiento_path(seguimiento) %></td>
        <td><%= link_to 'Destroy', seguimiento, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

